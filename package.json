{
	"name": "6x09-assembly",
	"displayName": "6x09 Assembly",
	"description": "Language support for 6x09 Assembly language.",
	"author": "Blair Leduc",
	"license": "MIT",
	"version": "0.4.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/BlairLeduc/vscode-6x09-assembly"
	},
	"bugs": {
		"url": "https://github.com/BlairLeduc/vscode-6x09-assembly/issues"
	},
	"publisher": "blairleduc",
	"categories": [
		"Programming Languages"
	],
	"keywords": [
		"6809",
		"6309",
		"6x09",
		"assembly language",
		"debugger"
	],
	"icon": "media/6x09-Assembly.png",
	"galleryBanner": {
		"color": "#00FF00",
		"theme": "light"
	},
	"engines": {
		"vscode": "^1.37.0"
	},
	"activationEvents": [
		"onLanguage:asm6x09",
		"onCommand:asm6x09.opcodeLowercase",
		"onCommand:asm6x09.opcodeUppercase",
		"onCommand:asm6x09.opcodeCapitalise"
	],
	"main": "./out/extension.js",
	"contributes": {
		"breakpoints": [
			{
				"language": "asm6x09"
			}
		],
		"colors": [
			{
				"id": "keyword.other.opcode.6309.asm6x09",
				"description": "Color for 6309 opcodes.",
				"defaults": {
					"dark": "#5f56d6",
					"light": "#8800ff",
					"highContrast": "foreground"
				}
			}
		],
		"commands": [
			{
				"command": "asm6x09.opcodeLowercase",
				"title": "6x09: Transform opcodes to lowercase",
				"when": "editorLangId == asm6x09"
			},
			{
				"command": "asm6x09.opcodeUppercase",
				"title": "6x09: Transform opcodes to uppercase",
				"when": "editorLangId == asm6x09"
			},
			{
				"command": "asm6x09.opcodeCapitalise",
				"title": "6x09: Transform opcodes to capitalised",
				"when": "editorLangId == asm6x09"
			},
			{
				"command": "asm6x09.startEmulator",
				"title": "6x09: Start Emulator"
			}
		],
		"configuration": {
			"title": "6x09 Assembly Configuration",
			"properties": {
				"asm6x09.editor.opcodeCasing": {
					"type": "string",
					"default": "lowercase",
					"enum": [
						"lowercase",
						"uppercase",
						"capitalised"
					],
					"description": "The case used in opcode Intellisense."
				},
				"asm6x09.editor.hovers": {
					"type": "string",
					"default": "full",
					"enum": [
						"light",
						"full"
					],
					"description": "The ammount of documentation to provide when hovering over an opcode."
				}
			}
		},
		"configurationDefaults": {
			"[asm6x09]": {
				"editor.wordBasedSuggestions": false,
				"editor.tabSize": 8,
				"editor.useTabStops": true,
				"editor.insertSpaces": false,
				"editor.hover.enabled": true,
				"editor.codeLens": true
			}
		},
		"debuggers": [
			{
				"type": "asm6x09",
				"label": "6X09 Assembly",
				"program": "./out/debug-adapter.js",
				"runtime": "node",
				"configurationAttributes": {
					"launch": {
						"required": [
							"sourceFile",
							"sourceFileMap",
							"emulator",
							"emulatorOptions"
						],
						"properties": {
							"trace": {
								"type": "boolean",
								"description": "Enable logging of the Debug Adapter Protocol.",
								"default": true
							},
							"sourceFile": {
								"type": "string",
								"description": "Absolute path to a assembly file.",
								"default": "${relativeFile}"
							},
							"sourceFileMap": {
								"type": "object",
								"description": "Optional source file mappings passed to the debug engine. Example: '{ \"/original/source/path\":\"/current/source/path\" }'",
								"default": "${workspaceFolder}/out/${fileBasenameNoExtension}.map"
							},
							"assembler": {
								"type": "string",
								"description": "Path to the assembler",
								"default": "lwasm"
							},
							"assemblerOptions": {
								"type": "array",
								"description": "Options for the assembler.",
								"items": {
									"type": "string",
									"title": "Assembler options"
								},
								"default": [
									"--decb",
									"--output=${fileBasenameNoExtension}.bin",
									"--map=${fileDirname}/${fileBasenameNoExtension}.map",
									"${relativeFile}"
								]
							},
							"assemblerWorkingDir": {
								"type": "string",
								"description": "Path to the working directory for the assembler.",
								"default": "${workspaceFolder}"
							},
							"emulator": {
								"type": "string",
								"description": "Path to the emulator.",
								"default": "/Applications/XRoar.app/Contents/MacOS/xroar"
							},
							"emulatorOptions": {
								"type": "array",
								"description": "Emulator options",
								"items": {
									"type": "string",
									"title": "Emulator option"
								},
								"default": [
									"-becker",
									"-machine-desc",
									"cocous",
									"-vdg-type",
									"6847t1"
								]
							},
							"emulatorWorkingDir": {
								"type": "string",
								"description": "Path to the working directory for the emulator.",
								"default": "${workspaceFolder}/out"
							}
						}
					}
				},
				"initialConfigurations": [
					{
						"type": "asm6x09",
						"request": "launch",
						"name": "6x09 Debug Current File",
						"sourceFile": "${relativeFile}",
						"sourceFileMap": "${workspaceFolder}/out/${fileBasenameNoExtension}.map",
						"assembler": "lwasm",
						"assemblerOptions": [
							"--decb",
							"--output=${workspaceFolder}/out/${fileBasenameNoExtension}.bin",
							"--map=${workspaceFolder}/out/${fileBasenameNoExtension}.map",
							"${relativeFile}"
						],
						"emulator": "/Applications/XRoar.app/Contents/MacOS/xroar",
						"emulatorOptions": [
							"-becker",
							"-machine-desc",
							"cocous",
							"-vdg-type",
							"6847t1"
						]
					}
				],
				"configurationSnippets": [
					{
						"type": "asm6x09",
						"request": "launch",
						"name": "6x09 Debug Current File",
						"sourceFile": "${relativeFile}",
						"sourceFileMap": "${workspaceFolder}/out/${fileBasenameNoExtension}.map",
						"assembler": "lwasm",
						"assemblerOptions": [
							"--decb",
							"--output=${workspaceFolder}/out/${fileBasenameNoExtension}.bin",
							"--map=${workspaceFolder}/out/${fileBasenameNoExtension}.map",
							"${relativeFile}"
						],
						"emulator": "/Applications/XRoar.app/Contents/MacOS/xroar",
						"emulatorOptions": [
							"-becker",
							"-machine-desc",
							"cocous",
							"-vdg-type",
							"6847t1"
						],
						"emulatorWorkingDir": "${workspaceFolder}/out"
					}
				],
				"variables": {},
				"languages": [
					"asm6x09"
				]
			}
		],
		"grammars": [
			{
				"language": "asm6x09",
				"scopeName": "source.asm.6x09",
				"path": "./syntaxes/6x09.tmLanguage.json"
			}
		],
		"languages": [
			{
				"id": "asm6x09",
				"aliases": [
					"6x09 Assembly",
					"asm6x09"
				],
				"extensions": [
					".asm",
					".a",
					".d"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "asm6x09.opcodeLowercase",
					"when": "editorLangId == asm6x09"
				},
				{
					"command": "asm6x09.opcodeUppercase",
					"when": "editorLangId == asm6x09"
				},
				{
					"command": "asm6x09.opcodeCapitalise",
					"when": "editorLangId == asm6x09"
				}
			]
		},
		"problemMatchers": [
			{
				"name": "lwasm",
				"owner": "asm6x09",
				"fileLocation": [
					"relative",
					"${workspaceFolder}"
				],
				"pattern": [
					{
						"regexp": "^([^(].*)\\((\\d+)\\)\\s*:\\s*([A-Z]+)\\s*:\\s*(.*)$",
						"file": 1,
						"line": 2,
						"severity": 3,
						"message": 4
					}
				]
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "tslint -p ./",
		"watch": "tsc -watch -p ./",
		"convert": "npx js-yaml syntaxes/6x09.tmLanguage.yaml > syntaxes/6x09.tmLanguage.json",
		"update": "npm run convert",
		"test": "npm run compile && node ./out/test/runTests"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.7.1",
		"@types/vscode": "^1.37.0",
		"glob": "^7.1.4",
		"js-yaml": "^3.13.1",
		"mocha": "^4.1.0",
		"tslint": "^5.18.0",
		"typescript": "^3.5.3",
		"vscode-debugadapter": "^1.35.0",
		"vscode-debugprotocol": "^1.35.0",
		"vscode-test": "^1.2.0"
	},
	"dependencies": {
		"await-notify": "^1.0.1"
	}
}
